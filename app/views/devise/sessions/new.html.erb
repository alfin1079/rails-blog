<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <header class="page-header">
        <h2>Sign In</h2>
      </header>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p>
          <%= f.email_field :email, autofocus: true, class: 'form-control input-lg',placeholder: 'Email' %>
        </p>

        <p>
          <%= f.password_field :password, autocomplete: "off",class: 'form-control input-lg',placeholder: "Password" %>
        </p>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> Remember me ?
            </label>
          </div>
        <% end -%>

        <p>
          <%= f.submit "Log in",class: 'btn btn-primary btn-lg btn-block' %>
        </p>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
